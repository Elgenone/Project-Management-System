            <label class="font-size:23px;font-weight:bold;">@item.Projects.name</label>
            <p style="font-size:23px;font-weight:bold;">Project Description</p>
            @item.Projects.jobDescr
            <p style="font-size:23px;font-weight:bold;">Project state</p>
            @item.Projects.state
            <br /> <br /> 
               
            @Html.ActionLink("Assign Project", "Assign", "Home", new { recverid = item.myUser_id, projectid = item.project_id }
         , new { onclick = "return confirm('Are you sure you want to assign project " + item.Projects.name + "?');", @class = "btn btn-success" })

        </div>
        <br />
        <hr />
    }   

}


@{
    var Projects = ViewBag.projects;
}

@if (Session["Uid"] != null && Session["Role"].ToString() == "admin")
{

    <h3>Unssigned Projects</h3>
        <hr />
    foreach (var item in Projects)
    {
            <div style="background-color:ghostwhite;color:black;margin: auto;width: 60%;border: 3px solid #73AD21;padding: 10px;font-size:20px;text-align:center">
                <img src="~/uploads/@item.Users.img" style="width:100px;height:100px;border-radius:100%" />
                <label class="font-size:23px;font-weight:bold;">@item.Users.name</label>
                <p style="font-size:23px;font-weight:bold;">Project Name</p>
                <label class="font-size:23px;font-weight:bold;">@item.Projects.name</label>
                <p style="font-size:23px;font-weight:bold;">Project Description</p>
                @item.Projects.jobDescr
                <p style="font-size:23px;font-weight:bold;">Project state</p>
                @item.Projects.state
                <br /> <br />
                @Html.ActionLink("Remove Post", "AcceptOrRejectPost", new { id = item.id, value = "rejected" }
       , new { onclick = "return confirm('Are you sure you want to delete project " + item.Projects.name + "?');" , @class = "btn btn-danger" }) <text>||</text>

                @Html.ActionLink("Edit Post", "EditPost", new { id = item.id }
            , new { onclick = "return confirm('Are you sure you want to edit project " + item.Projects.name + "?');", @class = "btn btn-info" }) 



            </div>
            <br />
            <hr />
    }

}
else if (Session["Uid"] != null && Session["Role"].ToString() == "manager")
{
    <h3>Unssigned Projects</h3>
    <hr />
    foreach (var item in Projects)
    {
        <div style="background-color:ghostwhite;color:black;margin: auto;width: 60%;border: 3px solid #73AD21;padding: 10px;font-size:20px;text-align:center">
